#include <iostream>
using namespace std;

int main()
{
	int array[6];
	int arrayLength = 6;
	
	cout << "Input array :" << endl;
	for(int i = 0; i < 6; i++)
		cin>> array[i] ;
	cout << endl;
	
	int option;
	cout << "Choose option:\n";
	cout << "1. Sort in descending order. \n2. Sort in Ascending order. \n0. Exit.\n";
	cin >> option;
	
    switch (option)
    {
        case 1:
            {
            while(arrayLength--)
	            {
		        bool swapped = false;
		        for(int i = 0; i < arrayLength; i++)
	            	{
			        if(array[i] < array[i + 1])
			            {
			        	swap(array[i], array[i + 1]);
				        swapped = true;
			            }
		            }
		        if(swapped == false)
			        break;
	            }        
            }
        case 2:
            {
             while(arrayLength--)
	            {
		        bool swapped = false;
		        for(int i = 0; i < arrayLength; i++)
	            	{
			        if(array[i] > array[i + 1])
			            {
			        	swap(array[i], array[i + 1]);
				        swapped = true;
			            }
		            }
		        if(swapped == false)
			        break;
	            } 
	         break;
            }
        case 0: return 0;
            }
	
	
	cout << "Sorted array :" << endl;
	for(int i = 0; i < 6; i++)
		cout << array[i] << '\t';
	cout << endl;
}
